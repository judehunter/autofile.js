    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "declaration": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}